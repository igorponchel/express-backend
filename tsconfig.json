      "paths": {
        "~/*": ["./src/*"],
        "~~/*": ["./*"]
      },
      "typeRoots": [
        "/types/express/index.d.ts", ".node_modules/@types"
      ],
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"],
